<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.pg.ljh.dao.UserDao">
    <select id="selAllUser" resultType="User" parameterType="com.pg.ljh.entity.User">
        select * from user
        where 1=1
        <if test="uname!=null">
            and uname = #{uname}
        </if>
        <if test="uphone!=null">
            and uphone = #{uphone}
        </if>
         <if test="uemail!=null">
             and uemail = #{uemail}
         </if>
    </select>
</mapper>